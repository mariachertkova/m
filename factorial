#include <iostream>

using namespace std;


unsigned long long fact(int n){
	if(n==0)
		return 1;
	else
		return n*fact(n-1);
}

int main(){
	setlocale(LC_ALL, "Russian");
	int n;
	cout<<"Введите число больше нуля"<<'\n';
	cin>>n;
	cout<<"Факториал "<<n<<" = "<<fact(n)<<'\n';
	system("pause");
	return 0;
}
